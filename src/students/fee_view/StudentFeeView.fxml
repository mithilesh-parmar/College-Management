<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="students.fee_view.StudentFeeController">

    <ProgressIndicator fx:id="progressIndicator"/>

    <ScrollPane>


        <FlowPane orientation="VERTICAL">


            <GridPane hgap="10" vgap="10" alignment="center">


                <padding>
                    <Insets top="40" right="40" bottom="40" left="40"/>
                </padding>
                <columnConstraints>
                    <ColumnConstraints minWidth="100" prefWidth="100"
                                       maxWidth="Infinity" halignment="RIGHT">
                    </ColumnConstraints>
                    <ColumnConstraints minWidth="200" prefWidth="200"
                                       maxWidth="Infinity" hgrow="ALWAYS">
                    </ColumnConstraints>
                </columnConstraints>

                <Label text="Total Fee: " GridPane.columnIndex="0"
                       GridPane.rowIndex="1">
                </Label>
                <Label fx:id="totalFeeLabel" prefHeight="40"
                       GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Amount Paid: " GridPane.columnIndex="0"
                       GridPane.rowIndex="2">
                </Label>
                <Label fx:id="amountPaidLabel" prefHeight="40"
                       GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Scholarship: " GridPane.columnIndex="0"
                       GridPane.rowIndex="3">
                </Label>
                <Label fx:id="scholarshipLabel" prefHeight="40"
                       GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            </GridPane>

            <TableView fx:id="feeTable" VBox.vgrow="ALWAYS">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <columns>

                    <TableColumn text="Date">
                        <cellValueFactory>
                            <PropertyValueFactory property="date"/>
                        </cellValueFactory>
                    </TableColumn>

                    <TableColumn text="Student Id">
                        <cellValueFactory>
                            <PropertyValueFactory property="studentID"/>
                        </cellValueFactory>
                    </TableColumn>

                    <TableColumn text="Amount">
                        <cellValueFactory>
                            <PropertyValueFactory property="amount"/>
                        </cellValueFactory>
                    </TableColumn>

                    <TableColumn text="Type">
                        <cellValueFactory>
                            <PropertyValueFactory property="type"/>
                        </cellValueFactory>
                    </TableColumn>

                </columns>

            </TableView>
        </FlowPane>
    </ScrollPane>
</StackPane>
