<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.layout.*?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.ProgressIndicator?>
<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="students.attendance.AttendanceController"
           stylesheets="@/styles/dark_metro_style.css"
>


    <TableView fx:id="attendanceTable" VBox.vgrow="ALWAYS">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <columns>

            <TableColumn text="Date">
                <cellValueFactory>
                    <PropertyValueFactory property="date"/>
                </cellValueFactory>
            </TableColumn>

            <TableColumn text="Present">
                <cellValueFactory>
                    <PropertyValueFactory property="present"/>
                </cellValueFactory>
            </TableColumn>

        </columns>

    </TableView>

    <ProgressIndicator fx:id="progressIndicator"/>
</StackPane>
