<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane fx:controller="teacher_leaves.edit_view.LeaveEditController"
          xmlns:fx="http://javafx.com/fxml" alignment="center"
          hgap="10" vgap="10"
          stylesheets="@/styles/dark_metro_style.css"
>
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>
    <columnConstraints>
        <ColumnConstraints minWidth="100" prefWidth="100"
                           maxWidth="Infinity" halignment="RIGHT">
        </ColumnConstraints>
        <ColumnConstraints minWidth="200" prefWidth="200"
                           maxWidth="Infinity" hgrow="ALWAYS">
        </ColumnConstraints>
    </columnConstraints>


    <!-- Add Name Label -->
    <Label text="Teacher Name : " GridPane.columnIndex="0"
           GridPane.rowIndex="1">
    </Label>
    <!-- Add Name Text Field -->
    <TextField fx:id="teacherNameTextField" prefHeight="40"
               GridPane.columnIndex="1" GridPane.rowIndex="1"/>


    <!-- Add Email Label -->
    <Label text="Start Date : " GridPane.columnIndex="0"
           GridPane.rowIndex="2">
    </Label>
    <!-- Add Email Text Field -->
    <DatePicker fx:id="startDatePicker" prefHeight="40"
               GridPane.columnIndex="1" GridPane.rowIndex="2"/>


    <!-- Add Email Label -->
    <Label text="End Date : " GridPane.columnIndex="0"
           GridPane.rowIndex="3">
    </Label>
    <!-- Add Email Text Field -->
    <DatePicker fx:id="endDatePicker" prefHeight="40"
               GridPane.columnIndex="1" GridPane.rowIndex="3"/>


    <!-- Add Email Label -->
    <Label text="Status : " GridPane.columnIndex="0"
           GridPane.rowIndex="4">
    </Label>
    <!-- Add Email Text Field -->
    <TextField fx:id="statusTextField" prefHeight="40"
               GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <!-- Add Email Label -->
    <Label text="Reason : " GridPane.columnIndex="0"
           GridPane.rowIndex="5">
    </Label>
    <!-- Add Email Text Field -->
    <TextField fx:id="reasonTextField" prefHeight="40"
               GridPane.columnIndex="1" GridPane.rowIndex="5"/>


    <!-- Add Submit Button -->
    <Button fx:id="submitButton" text="Update"
            prefWidth="100" prefHeight="40" defaultButton="true"
            GridPane.columnIndex="0" GridPane.rowIndex="6"
            GridPane.columnSpan="2" GridPane.rowSpan="1"
            GridPane.halignment="CENTER"
    >
        <GridPane.margin>
            <Insets top="20" right="0" bottom="20" left="0"/>
        </GridPane.margin>
    </Button>
</GridPane>

