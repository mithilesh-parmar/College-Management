<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="time_table.TimeTableController"
            stylesheets="@/styles/dark_metro_style.css"
            fx:id="mainView"
>

    <left>
        <VBox>
            <Label text="Sections" id="headline"/>
            <TextField fx:id="searchTextField"
                       maxWidth="Infinity"
                       alignment="CENTER"
                       promptText="Search"
                       onKeyPressed="#onSearchTextEntered">

                <VBox.margin>
                    <Insets topRightBottomLeft="8"/>
                </VBox.margin>
                <padding>
                    <Insets topRightBottomLeft="4"/>
                </padding>

            </TextField>
            <ListView fx:id="sectionsListView"/>
        </VBox>
    </left>


    <center>

        <StackPane>


            <VBox VBox.vgrow="ALWAYS">

                <HBox HBox.hgrow="ALWAYS" alignment="CENTER">
                    <padding>
                        <Insets topRightBottomLeft="10"/>
                    </padding>
                    <ToggleButton text="MON" fx:id="mondayToggleButton"/>
                    <ToggleButton text="TUE" fx:id="tuesdayToggleButton"/>
                    <ToggleButton text="WED" fx:id="wednesdayToggleButton"/>
                    <ToggleButton text="THUR" fx:id="thursdayToggleButton"/>
                    <ToggleButton text="FRI" fx:id="fridayToggleButton"/>
                    <ToggleButton text="SAT" fx:id="saturdayToggleButton"/>
                </HBox>


                <BorderPane>
                    <left>
                        <Label text="Time Table" id="headline" GridPane.columnIndex="0" GridPane.halignment="LEFT"/>
                    </left>
                    <right>
                        <Button text="ADD" alignment="CENTER_RIGHT" GridPane.columnIndex="1"
                                GridPane.halignment="RIGHT">
                            <BorderPane.margin>
                                <Insets topRightBottomLeft="5"/>
                            </BorderPane.margin>
                        </Button>
                    </right>
                </BorderPane>


                <TableView fx:id="timeTableForSection" VBox.vgrow="ALWAYS">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                    <columns>

                        <TableColumn text="Subject">
                            <cellValueFactory>
                                <PropertyValueFactory property="name"/>
                            </cellValueFactory>
                        </TableColumn>

                        <TableColumn text="Start Time">
                            <cellValueFactory>
                                <PropertyValueFactory property="startTime"/>
                            </cellValueFactory>
                        </TableColumn>

                        <TableColumn text="End Time">
                            <cellValueFactory>
                                <PropertyValueFactory property="endTime"/>
                            </cellValueFactory>
                        </TableColumn>

                    </columns>

                </TableView>
            </VBox>


            <ProgressIndicator fx:id="progressIndicator"/>


        </StackPane>


    </center>

</BorderPane>
