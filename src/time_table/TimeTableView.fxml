<HBox stylesheets="@/styles/dark_metro_style.css" xmlns="http://javafx.com/javafx/10.0.2-internal"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="time_table.TimeTableController">


    <StackPane>


        <VBox>

            <Button fx:id="addButton" defaultButton="true" text="Add Lecture" StackPane.alignment="BOTTOM_LEFT"/>
            <Label id="headline" text="Sections"/>
            <TextField fx:id="searchTextField" alignment="CENTER" maxWidth="Infinity"
