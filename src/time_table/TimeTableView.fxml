<?import custom_view.icon_button.IconButton?>
<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="time_table.TimeTableController"
      stylesheets="@/styles/dark_metro_style.css"

