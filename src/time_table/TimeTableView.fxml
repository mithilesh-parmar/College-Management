                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                    <columns>

                        <TableColumn text="Subject">
                            <cellValueFactory>
                                <PropertyValueFactory property="name"/>
                            </cellValueFactory>

                        </TableColumn>

                        <TableColumn text="Start Time">
