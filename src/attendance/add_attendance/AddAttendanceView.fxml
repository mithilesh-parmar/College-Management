<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import custom_view.loading_combobox.classes.ClassLoadingComboBox?>
<?import custom_view.loading_combobox.section.SectionLoadingComboBox?>
<?import javafx.geometry.Insets?>
<?import custom_view.loading_combobox.batches.BatchLoadingComboBox?>
<?import javafx.scene.text.Text?>


<?import custom_view.loading_combobox.course.CourseLoadingComboBox?>
<?import custom_view.loading_combobox.subject.SubjectLoadingComboBox?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="attendance.add_attendance.AddAttendanceController"
          stylesheets="@/styles/dark_metro_style.css"
          hgap="10" vgap="10"
>
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>
    <columnConstraints>
        <ColumnConstraints minWidth="200" prefWidth="100"
                           maxWidth="Infinity" halignment="LEFT">
        </ColumnConstraints>
        <ColumnConstraints minWidth="200" prefWidth="200"
                           maxWidth="Infinity" hgrow="ALWAYS" halignment="CENTER">
        </ColumnConstraints>
    </columnConstraints>
    <Label text="Course" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <CourseLoadingComboBox fx:id="courseLoadingComboBox" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="Year" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <ComboBox fx:id="yearComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Lecture" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <SubjectLoadingComboBox fx:id="subjectLoadingComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Date" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <DatePicker fx:id="attendanceDate" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Sheet" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <Button fx:id="addExcelSheet" text="Select Excel Sheet"
            GridPane.columnIndex="1" GridPane.rowIndex="4"
            GridPane.columnSpan="2" GridPane.rowSpan="1"
            GridPane.halignment="CENTER"/>

    <Button fx:id="submitButton" text="Submit"
            GridPane.columnIndex="0" GridPane.rowIndex="5"
            GridPane.columnSpan="2" GridPane.rowSpan="1"
            GridPane.halignment="CENTER"/>

</GridPane>



