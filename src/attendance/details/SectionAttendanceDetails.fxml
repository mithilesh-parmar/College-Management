<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="attendance.details.SectionAttendanceDetails"
           stylesheets="@/styles/dark_metro_style.css"
>


    <BorderPane>

        <padding>
            <Insets topRightBottomLeft="14"/>
        </padding>

        <top>
            <ComboBox fx:id="filterComboBox"/>
        </top>

        <center>
            <TableView fx:id="attendanceTable" VBox.vgrow="ALWAYS">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <columns>

                    <TableColumn text="Student ID">
                        <cellValueFactory>
                            <PropertyValueFactory property="date"/>
                        </cellValueFactory>
                    </TableColumn>

                    <TableColumn text="Date">
                        <cellValueFactory>
                            <PropertyValueFactory property="date"/>
                        </cellValueFactory>
                    </TableColumn>

                    <TableColumn text="Lecture">
                        <cellValueFactory>
                            <PropertyValueFactory property="lecture"/>
                        </cellValueFactory>
                    </TableColumn>

                    <TableColumn text="Present">
                        <cellValueFactory>
                            <PropertyValueFactory property="present"/>
                        </cellValueFactory>
                    </TableColumn>

                </columns>

            </TableView>
        </center>
    </BorderPane>

    <ProgressIndicator fx:id="progressIndicator"/>
</StackPane>
