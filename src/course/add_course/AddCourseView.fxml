<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>
<GridPane fx:controller="course.add_course.AddCourseController"
          xmlns:fx="http://javafx.com/fxml" alignment="center"
          hgap="10" vgap="10"
          stylesheets="@/styles/dark_metro_style.css"
>
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>
    <columnConstraints>
        <ColumnConstraints minWidth="100" prefWidth="100"
                           maxWidth="Infinity" halignment="RIGHT">
        </ColumnConstraints>
        <ColumnConstraints minWidth="200" prefWidth="700"
                           maxWidth="Infinity" hgrow="ALWAYS">
        </ColumnConstraints>
    </columnConstraints>


    <!-- Add Name Label -->
    <Label text="Course Name : " GridPane.columnIndex="0"
           GridPane.rowIndex="1">
    </Label>
    <!-- Add Name Text Field -->
    <TextField fx:id="courseNameTextField" prefHeight="40"
               GridPane.columnIndex="1" GridPane.rowIndex="1"/>


    <!-- Add Email Label -->
    <Label text="Programme Years : " GridPane.columnIndex="0"
           GridPane.rowIndex="2">
    </Label>
    <!-- Add Email Text Field -->
    <ComboBox fx:id="yearsComboBox" prefHeight="40"
              GridPane.columnIndex="1" GridPane.rowIndex="2"/>


    <ListView fx:id="subjectListView" GridPane.columnIndex="1" GridPane.rowIndex="3"/>


    <!-- Add Submit Button -->
    <Button fx:id="submitButton" text="Add"
            prefWidth="100" prefHeight="40" defaultButton="true"
            GridPane.columnIndex="0" GridPane.rowIndex="7"
            GridPane.columnSpan="2" GridPane.rowSpan="1"
            GridPane.halignment="CENTER"
    >
        <GridPane.margin>
            <Insets top="20" bottom="20"/>
        </GridPane.margin>
    </Button>
</GridPane>

