<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.geometry.Insets?>
<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="fee.FeeController">

    <ProgressIndicator fx:id="progressIndicator"/>

    <VBox>
        <BorderPane>
            <padding>
                <Insets topRightBottomLeft="18"/>
            </padding>
            <left>

                <HBox spacing="5">
                    <Button fx:id="findButton" text="Find"/>
                    <Button fx:id="clearButton" text="Clear"/>
                </HBox>

            </left>

            <right>
                <Button fx:id="addButton" text="Add" defaultButton="true"/>
            </right>
        </BorderPane>

        <TableView fx:id="feeTable" VBox.vgrow="ALWAYS">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <columns>

                <TableColumn text="Date">
                    <cellValueFactory>
                        <PropertyValueFactory property="date"/>
                    </cellValueFactory>
                </TableColumn>

                <TableColumn text="Student Id">
                    <cellValueFactory>
                        <PropertyValueFactory property="studentID"/>
                    </cellValueFactory>
                </TableColumn>

                <TableColumn text="Amount">
                    <cellValueFactory>
                        <PropertyValueFactory property="amount"/>
                    </cellValueFactory>
                </TableColumn>

                <TableColumn text="Type">
                    <cellValueFactory>
                        <PropertyValueFactory property="type"/>
                    </cellValueFactory>
                </TableColumn>

            </columns>

        </TableView>
    </VBox>


</StackPane>
